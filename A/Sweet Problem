//https://codeforces.com/contest/1263/problem/A
//https://codeforces.com/blog/entry/71803#comment-561543

#include<bits/stdc++.h>
using namespace std;

int main()
{
    int n;
    cin>>n;
    int a[3];
    while(n--)
    {
        cin>>a[0]>>a[1]>>a[2];
        sort(a,a+3);
        if(a[0]+a[1]<a[2])cout<<a[0]+a[1]<<endl;
        else cout<<(a[0]+a[1]+a[2])/2<<endl;

    }
}
